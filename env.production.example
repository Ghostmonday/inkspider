# Process Management
PROCESS_MANAGER=pm2
PROCESS_INSTANCES=max
PROCESS_AUTO_RESTART=true
PROCESS_MAX_RESTARTS=10
PROCESS_MIN_UPTIME=1000

# Resource Limits
MEMORY_LIMIT=512MB
CPU_LIMIT=1
DISK_LIMIT=1GB
NETWORK_LIMIT=100Mbps

# Development Tools
DEV_TOOLS_ENABLED=false
HOT_RELOAD=false
SOURCE_MAPS=false
DEBUG_MODE=false
PROFILING=false

# Build Configuration
BUILD_OPTIMIZATION=true
BUNDLE_ANALYZER=false
TREE_SHAKING=true
CODE_SPLITTING=true
LAZY_LOADING=true

# Deployment Configuration
DEPLOYMENT_STRATEGY=blue_green
DEPLOYMENT_ROLLBACK_ENABLED=true
DEPLOYMENT_HEALTH_CHECK=true
DEPLOYMENT_SMOKE_TESTS=true
DEPLOYMENT_CANARY_PERCENTAGE=10

# Environment Validation
ENV_VALIDATION_ENABLED=true
REQUIRED_ENV_VARS=NEXT_PUBLIC_SUPABASE_URL,NEXT_PUBLIC_SUPABASE_ANON_KEY,SUPABASE_SERVICE_ROLE_KEY,APP_UPLOAD_SECRET
ENV_VALIDATION_STRICT=true
ENV_VALIDATION_FAIL_FAST=true
