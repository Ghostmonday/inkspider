# ==============================================
# SPIDERINK.ART PRODUCTION CONFIGURATION
# ==============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://spiderink.art
NEXT_PUBLIC_APP_NAME=SpiderInk.art
NEXT_PUBLIC_APP_DESCRIPTION=AI-Generated Video Platform

# DirectorStudio Integration
APP_UPLOAD_SECRET=your_secure_upload_secret_key_min_32_chars
DIRECTORSTUDIO_CLIENT_VERSION=1.0.0
DIRECTORSTUDIO_API_ENDPOINT=https://api.directorstudio.com

# Security Configuration
HMAC_SECRET=your_hmac_secret_key_min_32_chars
JWT_SECRET=your_jwt_secret_key_min_32_chars
ENCRYPTION_KEY=your_encryption_key_min_32_chars

# Admin & Monitoring
ADMIN_EMAIL_ALERT=admin@spiderink.art
ADMIN_PHONE_ALERT=+1234567890
SENTRY_DSN=your_sentry_dsn_optional
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=spiderink-art

# Performance & Caching
ENABLE_CACHING=true
CACHE_TTL=300000
REDIS_URL=your_redis_url_optional
CDN_URL=https://cdn.spiderink.art

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token_optional
ANALYTICS_ENDPOINT=https://analytics.spiderink.art/api/events

# Error Reporting
ERROR_REPORTING_ENDPOINT=https://errors.spiderink.art/api/report
PERFORMANCE_REPORTING_ENDPOINT=https://perf.spiderink.art/api/metrics

# Storage Configuration
SUPABASE_STORAGE_BUCKET=directorstudio-projects
SUPABASE_STORAGE_BUCKET_PUBLIC=videos
SUPABASE_STORAGE_BUCKET_THUMBNAILS=thumbnails
SUPABASE_STORAGE_BUCKET_AVATARS=avatars

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration
SMTP_HOST=smtp.spiderink.art
SMTP_PORT=587
SMTP_USER=noreply@spiderink.art
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@spiderink.art

# Cron Jobs & Background Tasks
CRON_SECRET=your_cron_secret_for_reconciliation
CRON_ENDPOINT=https://api.spiderink.art/cron
RECONCILIATION_SCHEDULE=0 */6 * * *

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Feature Flags
ENABLE_BOOST_SYSTEM=true
ENABLE_RECONCILIATION=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Development vs Production
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
DEBUG=false
VERBOSE_LOGGING=false

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/spiderink
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# API Configuration
API_BASE_URL=https://api.spiderink.art
API_VERSION=v1
API_TIMEOUT=30000
MAX_REQUEST_SIZE=50mb

# File Upload Configuration
MAX_FILE_SIZE=500MB
ALLOWED_FILE_TYPES=mp4,avi,mov,wmv,flv,webm
UPLOAD_TIMEOUT=300000

# Monitoring & Health Checks
HEALTH_CHECK_ENDPOINT=https://api.spiderink.art/health
STATUS_PAGE_URL=https://status.spiderink.art
UPTIME_MONITORING_URL=https://uptime.spiderink.art

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=s3://spiderink-backups

# Security Headers
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# CDN Configuration
CDN_CACHE_TTL=31536000
CDN_COMPRESSION=true
CDN_MINIFY=true

# Load Balancing
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30000

# Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20

# Disaster Recovery
DISASTER_RECOVERY_ENABLED=true
BACKUP_REGION=us-west-2
FAILOVER_ENDPOINT=https://failover.spiderink.art

# Compliance & Privacy
GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=2555
PRIVACY_POLICY_URL=https://spiderink.art/privacy
TERMS_OF_SERVICE_URL=https://spiderink.art/terms

# Support Configuration
SUPPORT_EMAIL=support@spiderink.art
SUPPORT_PHONE=+1234567890
SUPPORT_CHAT_ENABLED=true
DOCUMENTATION_URL=https://docs.spiderink.art

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're performing scheduled maintenance. We'll be back shortly.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=stdout
LOG_RETENTION_DAYS=30

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/spiderink_test
TEST_ENVIRONMENT=testing
MOCK_EXTERNAL_SERVICES=true

# Performance Testing
LOAD_TEST_ENABLED=false
LOAD_TEST_CONCURRENT_USERS=100
LOAD_TEST_DURATION=300

# Security Testing
SECURITY_SCAN_ENABLED=true
VULNERABILITY_SCAN_SCHEDULE=0 0 * * 0
PENETRATION_TEST_SCHEDULE=0 0 1 * *

# Business Metrics
BUSINESS_METRICS_ENABLED=true
REVENUE_TRACKING=true
USER_ENGAGEMENT_TRACKING=true
CONTENT_PERFORMANCE_TRACKING=true

# A/B Testing
AB_TESTING_ENABLED=true
AB_TEST_ALLOCATION=0.1
AB_TEST_DURATION_DAYS=7

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,ko,zh
TIMEZONE=UTC

# Accessibility
ACCESSIBILITY_ENABLED=true
SCREEN_READER_SUPPORT=true
KEYBOARD_NAVIGATION=true
HIGH_CONTRAST_MODE=true

# Mobile Configuration
PWA_ENABLED=true
PWA_CACHE_STRATEGY=cache_first
PWA_OFFLINE_SUPPORT=true
MOBILE_APP_STORE_URLS=https://apps.apple.com/app/spiderink

# Social Media Integration
SOCIAL_SHARING_ENABLED=true
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_HANDLE=@spiderinkart
INSTAGRAM_HANDLE=@spiderinkart

# Third-Party Integrations
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# Queue Configuration
QUEUE_ENABLED=true
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_DEFAULT=300
CACHE_TTL_SHORT=60
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Session Configuration
SESSION_SECRET=your_session_secret_key_min_32_chars
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# CORS Configuration
CORS_ORIGINS=https://spiderink.art,https://www.spiderink.art,https://admin.spiderink.art
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Compression Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=80
IMAGE_FORMATS=webp,avif,jpeg,png
IMAGE_SIZES=320,640,768,1024,1280,1920

# Video Optimization
VIDEO_OPTIMIZATION_ENABLED=true
VIDEO_QUALITY=high
VIDEO_FORMATS=mp4,webm
VIDEO_RESOLUTIONS=480p,720p,1080p

# Search Configuration
SEARCH_ENABLED=true
SEARCH_PROVIDER=elasticsearch
SEARCH_INDEX_PREFIX=spiderink
SEARCH_RESULTS_PER_PAGE=20

# Notification Configuration
NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATIONS=true
PUSH_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_URL=https://api.spiderink.art/docs
SWAGGER_UI_ENABLED=true
REDOC_ENABLED=true

# Monitoring Dashboards
MONITORING_DASHBOARD_URL=https://monitoring.spiderink.art
GRAFANA_URL=https://grafana.spiderink.art
KIBANA_URL=https://kibana.spiderink.art

# Alerting Configuration
ALERT_EMAIL=support@spiderink.art
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/discord/webhook
ALERT_PAGERDUTY_KEY=your_pagerduty_integration_key

# Compliance Monitoring
COMPLIANCE_MONITORING=true
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_REPORTING_SCHEDULE=0 0 1 * *

# Data Export/Import
DATA_EXPORT_ENABLED=true
DATA_IMPORT_ENABLED=true
EXPORT_FORMATS=json,csv,xml
IMPORT_FORMATS=json,csv,xml

# Version Control
API_VERSIONING=true
API_VERSION_HEADER=X-API-Version
API_VERSION_DEFAULT=v1
API_VERSION_DEPRECATED=v0

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Configuration
RETRY_ENABLED=true
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
RETRY_BACKOFF_MULTIPLIER=2
RETRY_MAX_DELAY=10000

# Timeout Configuration
REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=10000
READ_TIMEOUT=20000
WRITE_TIMEOUT=20000

# Connection Pooling
CONNECTION_POOL_MIN=2
CONNECTION_POOL_MAX=20
CONNECTION_POOL_IDLE_TIMEOUT=30000
CONNECTION_POOL_ACQUIRE_TIMEOUT=60000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_THRESHOLD=3

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
GRACEFUL_SHUTDOWN_SIGNALS=SIGTERM,SIGINT
